---
import BaseLayout from "@/layouts/BaseLayout.astro";
import BlogListItem from "@/components/BlogListItem.astro";
import { getBlogPosts } from "@/content";

// the posts should be returned in reverse chronological order
const posts = await getBlogPosts();
---

<BaseLayout title="In the News">
	<ul role="list" class="mt-2u">
		{posts.map((post) => <BlogListItem post={post} />)}
	</ul>
</BaseLayout>
