---
interface Props {
	color: string;
	title: string;
	body: string;
	label: string;
	href: string;
}

const { color, title, body, label, href } = Astro.props;
---

<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 p-8 rounded-lg text-center md:text-left" style={`background: ${color}`}>
    <div class="w-full md:w-1/3 mb-4 md:mb-0">
        <slot />
    </div>
    <div class="flex flex-col h-full gap-2 w-full md:w-3/5">
        <h3 class="text-white font-[var(--font-barlow-condensed)] uppercase text-xl md:text-2xl font-bold min-h-[3rem]">{title}</h3>
        <p class="text-white text-sm md:text-base h-full mb-4">
            {body}
        </p>
        <a href={href} target="_blank" class="text-white font-bold text-base md:text-lg hover:underline decoration-white/90">
            {label}
        </a>
    </div>
</div>
