---
import TagOrnament from "./TagOrnament.astro";

interface Props {
	title: string;
	id?: string;
	showOrnament?: boolean;
	anchor?: "left" | "right";
}

const { title, id, showOrnament = true, anchor = "left" } = Astro.props;
const [firstWord, ...rest] = title.split(/\s+/);

// 	<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
---

<section id={id} class="py-4">
	<div
		class:list={[
			"flex",
			"items-center",
			"justify-between",
			"gap-10",
			{ "flex-row-reverse": anchor === "right" },
		]}
	>
		<h2
			class:list={[
				"flex-1",
				"font-condensed",
				"font-semi-bold",
				"uppercase",
				"text-9xl",
				"whitespace-pre-line",
				"leading-[0.8]",
				"mb-0",
				anchor === "left" && "text-right",
			]}
		>
			<span class="text-primary">{firstWord}</span>
			<br>
			{rest.join("\n")}
		</h2>
		<div
			class:list={[
				"flex-1",
				"text-3xl",
				anchor === "right" && "text-right",
			]}
		>
			<slot />
		</div>
	</div>
	{showOrnament && (
		<div class="flex justify-center mt-8">
			<TagOrnament />
		</div>
	)}
</section>
