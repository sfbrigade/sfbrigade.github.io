---
import { Icon } from "astro-icon/components";

interface Props {
	size?: number | string;
	width?: number | string;
	height?: number | string;
	style?: string;
	class?: string;
}

const { size, width, height, style, class: className } = Astro.props;

// below, set the viewBox to add 10% padding around the icon
---

<Icon name="logo-colorable"
	viewBox="-5.5 -7.4 66 88.8"
	size={size}
	width={width}
	height={height}
	style={style}
	class={className}
/>

<style>
	[data-icon] {
		color: #ddd;
		overflow: unset;
	}
</style>
