---
import BaseLayout from "@/layouts/BaseLayout.astro";
import CodeSummary from "@/components/CodeSummary.astro";
import NewsSummary from "@/components/NewsSummary.astro";
import BigText from "@/components/BigText.astro";
import Button from "@/components/Button.astro";
import { newsletterURL, pitchProjectURL, slackURL } from "@/utils/urls";

const ButtonClass = `
	transition
	duration-300
	ease-in-out
	underline-offset-[.2rem]
	underline
	decoration-primary/0
	hover:decoration-primary/80
`;
---

<BaseLayout title="Home" header="">
	<BigText>
		<Fragment slot="title">
			<b>SF</b><br>
			Civic<br>
			Tech
		</Fragment>

		<Fragment slot="body">
			We are a welcoming and inclusive volunteer group of <i>developers</i>, <i>designers</i>,
			<i>data geeks</i>, and <i>citizen activists</i> who use creative technology to address civic
			and social problems.
		</Fragment>
	</BigText>

	<BigText anchor="right">
		<Fragment slot="title">
			<b>Every</b><br>
			Wed<br>
			6:30PM
		</Fragment>

		<Fragment slot="body">
			<p><i>Virtual Civic Hack Night</i></p>
			<p>Not just for techies, success means having volunteers from all across
				our community.</p>
			<p>Everyone is welcome!</p>
		</Fragment>
	</BigText>

	<BigText size="md" showOrnament={false}>
		<Fragment slot="title">
			<a href={slackURL} role="button" class={ButtonClass}>
				<b>Join</b> the
				<br>Conversation
			</a>
		</Fragment>

		<Fragment slot="body">
			<p>Our Slack workspace is the main hub for communication and collaboration. Introduce yourself!</p>
			<p>
				<Button href={slackURL} newTab>Join</Button>
			</p>
		</Fragment>
	</BigText>

	<BigText size="md" anchor="right" showOrnament={false}>
		<Fragment slot="title">
			<a href={pitchProjectURL} role="button" class={ButtonClass}>
				<b>Propose</b> a<br>
				Project
			</a>
		</Fragment>

		<Fragment slot="body">
			<p>Have an idea to improve community or civic life in San Francisco? We want to hear it.</p>
			<p>
				<Button href={pitchProjectURL} newTab>Pitch</Button>
			</p>
		</Fragment>
	</BigText>

	<BigText size="md">
		<Fragment slot="title">
			<a href={newsletterURL} role="button" class={ButtonClass}>
				<b>Stay</b><br>
				Informed
			</a>
		</Fragment>

		<Fragment slot="body">
			<p>Sign up for our newsletter to stay updated on events, projects, and other announcements.</p>
			<p>
				<Button href={newsletterURL} newTab>Subscribe</Button>
			</p>
		</Fragment>
	</BigText>

	<NewsSummary />
	<CodeSummary />
</BaseLayout>
